
@{
    ViewData["Title"] = "Events";
    @model EventsWebMvc.ViewModels.EventCatalogIndexViewModel
}
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner.jpg" alt="Indoor/Outdoor Brunch" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Sunday Social.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-2.jpg" alt="Cyber Day" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Seminar including a series of panel discussions, key-note speakers, and networking opportunities.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-3.jpg" alt="Tech Mixer." class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Enjoy drinks and light bites as you network.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner-2.jpg" alt="Music and Art of the Night" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Concert series allows the audience to enjoy the music and art in an entirely new, exciting and indulgent way.
                    <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="esh-catalog-filters">
    <div class="container">
        <form asp-action="Index" asp-controller="EventCatalog" method="post">
            <label class="esh-catalog-label" data-title="Event Type">
                <select asp-for="@Model.EventTypesFilterApplied" asp-items="@Model.EventTypes" class="esh-catalog-filter"></select>
            </label>
            <label class="esh-catalog-label" data-title="Venue">
                <select asp-for="@Model.VenuesFilterApplied" asp-items="@Model.Venues" class="esh-catalog-filter"></select>
            </label>
            <input class="esh-catalog-send" type="image" src="~/images/arrow-right.svg" />
        </form>
    </div>
</section>

<div class="container">
    @if (Model.EventCatalogItems.Count() > 0)
    {
    @Html.Partial("_pagination", Model.PaginationInfo)

    <div class="esh-catalog-items row">
        @foreach (var eventCatalogItem in Model.EventCatalogItems)
            {
        <div class="esh-catalog-item col-md-4">
            @Html.Partial("_product", eventCatalogItem)
        </div>
            }
    </div>

    @Html.Partial("_pagination", Model.PaginationInfo)
    }

    else
    {
    <div class="esh-catalog-items row">
        THERE ARE NO RESULTS THAT MATCH YOUR SEARCH
    </div>
    }
</div>